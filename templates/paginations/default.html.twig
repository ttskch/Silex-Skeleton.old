{% set urls = [] %}
{% set urls = urls|merge({first:    url(routing, {page: data.first,               size: data.numItemsPerPage})}) %}
{% set urls = urls|merge({previous: url(routing, {page: data.previous|default(1), size: data.numItemsPerPage})}) %}
{% set urls = urls|merge({next:     url(routing, {page: data.next|default(1),     size: data.numItemsPerPage})}) %}
{% set urls = urls|merge({last:     url(routing, {page: data.last,                size: data.numItemsPerPage})}) %}

{% set is_first = false %}{% if not data.previous is defined %}{% set is_first = true %}{% endif %}
{% set is_last = false %}{% if not data.next is defined %}{% set is_last = true %}{% endif %}

<div class="clearfix">
    <ul class="pagination pull-left" style="margin-top: 0;">
        <li class="{% if is_first %}disabled{% endif %}">
            <a {% if not is_first %}href="{{ urls.first }}"{% endif %} title="{{ 'First'|trans({}, 'paginations') }}">
                &laquo;
            </a>
        </li>
        <li class="{% if is_first %}disabled{% endif %}">
            <a {% if not is_first %}href="{{ urls.previous }}"{% endif %} title="{{ 'Previous'|trans({}, 'paginations') }}">
                &lsaquo;
            </a>
        </li>

        {% for i in data.pagesInRange %}
            <li class="{% if i == data.current %}active{% endif %}">
                <a {% if i != data.current %}href="{{ url(routing, {page: i, size: data.numItemsPerPage}) }}"{% endif %}>{{ i }}</a>
            </li>
        {% endfor %}

        <li class="{% if is_last %}disabled{% endif %}">
            <a {% if not is_last %}href="{{ urls.next }}"{% endif %} title="{{ 'Next'|trans({}, 'paginations') }}">
                &rsaquo;
            </a>
        </li>
        <li class="{% if is_last %}disabled{% endif %}">
            <a {% if not is_last %}href="{{ urls.last }}"{% endif %} title="{{ 'Last'|trans({}, 'paginations') }}">
                &raquo;
            </a>
        </li>
    </ul>

    <div class="form-inline pull-left" style="margin-left: 10px">
        <div class="input-group">
            <span class="input-group-addon">{{ data.firstItemNumber }} - {{ data.lastItemNumber }} / {{ data.totalCount }}</span>
            <div class="input-group-btn">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    {{ data.numItemsPerPage }} <span class="caret"></span>
                </button>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li class="disabled"><a href="#" style="cursor: default;">{{ 'Items per page'|trans({}, 'paginations') }}</a></li>
                    <li class="divider"></li>
                    {% for size in [25, 50, 100, 200, 500] %}
                        <li><a role="menuitem" href="{{ url(routing, {size: size}) }}">{{ size }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</div>
